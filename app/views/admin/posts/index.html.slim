table
  - posts.each do |post|
    tr
      td
        = link_to [:admin, post]
          = post.title
      td
        = link_to [:admin, post]
          = truncate(post.body)
      td
        = link_to 'Edit', [:edit, :admin, post]
        - if post.deleted?
          = button_to 'Undelete', ['undestroy', :admin, post], method: :post
        - else
          = button_to 'Delete', [:admin, post], method: :delete
