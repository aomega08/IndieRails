@import 'base';
@import 'admin_modules/*';

a {
  color: #369;
}

h1, h2, h3 {
  font-family: "Roboto Slab";
}

.admin__signout {
  background: #f44336;
  color: white;
  border: none;
  line-height: 32px;
  border-radius: 2px;
  margin-top: 8px;
  display: inline-block;
  text-decoration: none;
  padding: 0 8px;
  margin-right: 16px;
}

.container {
  background: white;
  box-shadow: 0px 2px 4px -1px rgba(0, 0, 0, 0.2), 0px 4px 5px 0px rgba(0, 0, 0, 0.14), 0px 1px 10px 0px rgba(0, 0, 0, 0.12);
  border-radius: 2px;
  min-height: 50vh;
  padding: 24px 8px;

  @media (min-width: 550px) {
    padding: 24px;
  }
}
