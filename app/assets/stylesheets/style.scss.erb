@import 'fonts';
@import 'normalize';
@import 'modules/*';

html {
  -webkit-font-smoothing: antialiased;
}

body {
  font-family: sans-serif;

  @media (min-width: 800px) {
    margin-top: calc(72px + 1em);
  }
}

a {
  color: #369;
}

h1 a {
  color: #ff6e40;
  text-decoration: none;
  font-weight: normal;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 0 16px;
}

.admin__signout {
  background: #f44336;
  color: white;
  border: none;
  line-height: 32px;
  border-radius: 2px;
  margin-top: 8px;
  display: inline-block;
  text-decoration: none;
  padding: 0 8px;
  margin-right: 16px;
}

