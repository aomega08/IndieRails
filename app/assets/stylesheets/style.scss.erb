@import 'base';
@import 'modules/*';

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  background: #ffffff;
  color: #111111;

  @media (min-width: 800px) {
    margin-top: calc(72px + 1em);
  }
}

a {
  color: #369;
}

h1 a, h1.p-name {
  color: #111111;
  font-weight: 500;
  text-decoration: none;
  z-index: 0;
  position: relative;
}

h1.p-name::after {
  background-color: rgb(255, 120, 0);
  bottom: -20px;
  content: "";
  display: block;
  height: 4px;
  left: 0px;
  position: absolute;
  width: 70px;
}

h1, h2, h3, h4 {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
}
